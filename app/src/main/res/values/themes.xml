<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EchoMemory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/oswald_light</item>
    </style>

    <style name="Theme.EchoMemory.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EchoMemory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EchoMemory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="imageView" parent="@style/Theme.EchoMemory">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cardView" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/backgroundApp</item>
        <item name="android:clipToPadding">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="showAsAction">always</item>
        <item name="android:shadowColor">@color/grayLight2</item>
        <item name="android:shadowDx">@color/grayLight2</item>
        <item name="android:shadowDy">@color/grayLight2</item>
    </style>

    <style name="cardView_grayLight" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardBackgroundColor">@color/grayLight2</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="cardView_btn" parent="CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardBackgroundColor">@color/teal_200</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="textView_title_center" parent="">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:lineSpacingExtra">@dimen/lineHeight</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView" parent="">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineSpacingExtra">@dimen/lineHeight</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView_center" parent="">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineSpacingExtra">@dimen/lineHeight</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="editText_center" parent="">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/editText_height_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineSpacingExtra">@dimen/lineHeight</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="button" parent="ThemeOverlay.AppCompat">
        <item name="android:minWidth">@dimen/minWidthBTN</item>
        <item name="android:minHeight">@dimen/minHeightBTN</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>